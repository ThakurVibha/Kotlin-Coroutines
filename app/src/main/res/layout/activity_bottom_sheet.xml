<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".coroutines.maps.demomaps.codelabmap.maps.bottomsheets.SheetFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/bottom_sheet_element_3"
        android:textSize="25dp"
        android:drawableStart="@drawable/ic_baseline_run_circle_24"
        android:textColor="@color/sheet_element_text_color"
        android:drawableEnd="@drawable/ic_baseline_location_on_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="@string/bottom_sheet_element_2"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:drawableEnd="@drawable/ic_baseline_location_on_24"
        android:drawableStart="@drawable/ic_baseline_run_circle_24"
        android:textColor="@color/sheet_element_text_color"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sheet_element_text_color"
        android:layout_marginBottom="25dp"
        android:textSize="25dp"
        android:drawableStart="@drawable/ic_baseline_run_circle_24"
        android:drawableEnd="@drawable/ic_baseline_location_on_24"
        android:text="@string/bottom_sheet_element_2"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>